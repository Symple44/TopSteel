{
  "name": "@erp/ui",
  "version": "2.1.0",
  "description": "UI components library for ERP TopSteel - Enterprise-grade design system",
  "type": "module",
  "private": true,
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:vite && pnpm run build:types",
    "build:vite": "vite build",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:clean": "rimraf dist",
    "build:watch": "vite build --watch",
    "dev": "vite build --watch --mode development",
    "dev:storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist node_modules/.cache .turbo",
    "size-check": "echo 'Bundlesize remplacÃ© par vite-bundle-analyzer'",
    "analyze": "vite-bundle-analyzer dist/stats.html",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run size-check",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run test",
    "bundle:analyze": "vite-bundle-analyzer"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.1.1",
    "@radix-ui/react-context-menu": "^2.2.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-hover-card": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.2",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@erp/config": "workspace:*",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^9.0.15",
    "@storybook/addon-onboarding": "^9.0.15",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^9.0.15",
    "@storybook/react-vite": "^9.0.15",
    "@storybook/test": "^8.4.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "storybook": "^9.0.15",
    "typescript": "^5.8.3",
    "vite": "^7.0.2",
    "vite-bundle-analyzer": "^1.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.topsteel.internal"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "typescript",
    "design-system",
    "erp",
    "topsteel",
    "enterprise",
    "radix-ui",
    "tailwindcss"
  ],
  "author": {
    "name": "TopSteel Engineering Team",
    "email": "engineering@topsteel.com"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topsteel/erp-topsteel.git",
    "directory": "packages/ui"
  },
  "bugs": {
    "url": "https://github.com/topsteel/erp-topsteel/issues"
  },
  "homepage": "https://github.com/topsteel/erp-topsteel/tree/main/packages/ui#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "volta": {
    "node": "20.18.0",
    "pnpm": "8.15.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "config": {
    "access": "restricted"
  },
  "funding": {
    "type": "corporate",
    "url": "https://topsteel.com"
  }
}
