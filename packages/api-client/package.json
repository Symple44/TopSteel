{
  "name": "@erp/api-client",
  "version": "1.0.0",
  "description": "API client library for ERP TopSteel - Type-safe HTTP client with domain-specific endpoints",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./clients": {
      "types": "./dist/clients/index.d.ts",
      "import": "./dist/clients/index.js",
      "require": "./dist/clients/index.cjs"
    },
    "./projects": {
      "types": "./dist/projects/index.d.ts",
      "import": "./dist/projects/index.js",
      "require": "./dist/projects/index.cjs"
    },
    "./quotes": {
      "types": "./dist/quotes/index.d.ts",
      "import": "./dist/quotes/index.js",
      "require": "./dist/quotes/index.cjs"
    },
    "./inventory": {
      "types": "./dist/inventory/index.d.ts",
      "import": "./dist/inventory/index.js",
      "require": "./dist/inventory/index.cjs"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js",
      "require": "./dist/auth/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && tsc --project tsconfig.build.json --emitDeclarationOnly && tsc",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:vitest": "vitest",
    "test:vitest:coverage": "vitest --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@erp/domains": "workspace:*",
    "@erp/entities": "workspace:*",
    "@erp/utils": "workspace:*",
    "axios": "^1.11.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@erp/config": "workspace:*",
    "@jest/globals": "^30.0.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.39.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jsdom": "^26.1.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.8"
  },
  "keywords": [
    "api",
    "client",
    "http",
    "rest",
    "typescript",
    "erp",
    "topsteel",
    "enterprise"
  ],
  "author": {
    "name": "TopSteel Engineering Team",
    "email": "engineering@topsteel.tech"
  },
  "license": "UNLICENSED",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topsteel/erp-topsteel.git",
    "directory": "packages/api-client"
  },
  "private": true
}
