{
  "name": "@erp/api-client",
  "version": "1.0.0",
  "description": "API client library for ERP TopSteel - Type-safe HTTP client with domain-specific endpoints",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./clients": {
      "require": "./dist/clients/index.cjs",
      "types": "./dist/clients/index.d.ts",
      "import": "./dist/clients/index.js"
    },
    "./projects": {
      "require": "./dist/projects/index.cjs",
      "types": "./dist/projects/index.d.ts",
      "import": "./dist/projects/index.js"
    },
    "./quotes": {
      "require": "./dist/quotes/index.cjs",
      "types": "./dist/quotes/index.d.ts",
      "import": "./dist/quotes/index.js"
    },
    "./inventory": {
      "require": "./dist/inventory/index.cjs",
      "types": "./dist/inventory/index.d.ts",
      "import": "./dist/inventory/index.js"
    },
    "./auth": {
      "require": "./dist/auth/index.cjs",
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js"
    },
    "./core": {
      "require": "./dist/core/index.cjs",
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@erp/domains": "workspace:*",
    "@erp/utils": "workspace:*",
    "axios": "^1.7.2",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@erp/config": "workspace:*",
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.30.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "rimraf": "^6.0.1"
  },
  "keywords": [
    "api",
    "client",
    "http",
    "rest",
    "typescript",
    "erp",
    "topsteel",
    "enterprise"
  ],
  "author": {
    "name": "TopSteel Engineering Team",
    "email": "engineering@topsteel.tech"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topsteel/erp-topsteel.git",
    "directory": "packages/api-client"
  },
  "private": true
}
