{
  "extends": "../../packages/config/typescript/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "composite": false,
    "incremental": false,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
