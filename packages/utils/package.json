{
  "name": "@erp/utils",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts src/format/index.ts src/validation/index.ts src/calculation/index.ts src/helpers/index.ts src/constants/index.ts src/lib/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "format:check": "prettier --check 'src/**/*.{ts,json}' || echo 'Prettier not configured'",
    "test:coverage": "jest --coverage || echo 'No tests for utils package'",
    "test:unit": "jest || echo 'No tests for utils package'",
    "test:integration": "echo 'No integration tests for utils package'",
    "test": "jest --config=jest.config.cjs --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watch"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@erp/config": "workspace:*",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./format": {
      "require": "./dist/format/index.cjs",
      "types": "./dist/format/index.d.ts",
      "import": "./dist/format/index.js"
    },
    "./validation": {
      "require": "./dist/validation/index.cjs",
      "types": "./dist/validation/index.d.ts",
      "import": "./dist/validation/index.js"
    },
    "./calculation": {
      "require": "./dist/calculation/index.cjs",
      "types": "./dist/calculation/index.d.ts",
      "import": "./dist/calculation/index.js"
    },
    "./helpers": {
      "require": "./dist/helpers/index.cjs",
      "types": "./dist/helpers/index.d.ts",
      "import": "./dist/helpers/index.js"
    },
    "./constants": {
      "require": "./dist/constants/index.cjs",
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js"
    },
    "./lib": {
      "require": "./dist/lib/index.cjs",
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    }
  }
}
