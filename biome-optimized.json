{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "root": "."
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 2097152,
    "ignore": [
      "**/*.d.ts",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/coverage/**",
      "**/node_modules/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "warn",
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn",
        "noUnusedFunctionParameters": "warn",
        "noEmptyPattern": "error"
      },
      "style": {
        "useConst": "error",
        "useImportType": "error",
        "noNegationElse": "warn",
        "noDescendingSpecificity": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noConsole": "off",
        "noArrayIndexKey": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "complexity": {
        "noStaticOnlyClass": "warn"
      },
      "a11y": {
        "useButtonType": "warn",
        "noSvgWithoutTitle": "warn",
        "noNoninteractiveElementToInteractiveRole": "warn",
        "noStaticElementInteractions": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "globals": [
      "React",
      "JSX",
      "console",
      "window",
      "document",
      "process",
      "Buffer",
      "describe",
      "it",
      "test",
      "expect",
      "beforeEach",
      "afterEach",
      "jest"
    ]
  },
  "overrides": [
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnknownProperty": "off",
            "noUnknownPseudoClass": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/test/**/*.{ts,tsx}",
        "**/tests/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off",
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["**/scripts/**/*.{ts,js}", "**/migration/**/*.ts", "**/migrations/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off",
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "includes": ["apps/web/src/lib/auth/rbac-hooks.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "useHookAtTopLevel": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/ui/src/components/data-display/datatable/HierarchicalDataTable.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useAriaPropsSupportedByRole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "packages/ui/src/components/data-display/datatable/DataTable.tsx",
        "apps/web/src/app/backend-error/page.tsx",
        "apps/web/src/components/error-boundary.tsx",
        "apps/web/src/components/providers/monitoring-provider.tsx"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "noNoninteractiveTabindex": "off",
            "noStaticElementInteractions": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/web/src/components/providers/notifications-provider.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "useHookAtTopLevel": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/web/src/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "error"
          }
        }
      }
    },
    {
      "includes": ["packages/*/src/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/skeleton*.{ts,tsx}", "**/loading*.{ts,tsx}", "**/stories/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/RichTextEditor.tsx",
        "**/InlineEditor.tsx",
        "**/ReorderableList.tsx",
        "**/themed-reorderable-list.tsx",
        "**/DataTable.tsx",
        "**/HierarchicalDataTable.tsx"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "useSemanticElements": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/guards/*.{ts,tsx}",
        "**/middleware/*.{ts,tsx}",
        "**/interceptors/*.{ts,tsx}"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/entities/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    }
  ]
}
