# =========================================================================
# ERP TOPSTEEL - CONFIGURATION PRINCIPALE
# =========================================================================
# Fichier: .env.example
# Copier vers .env.local et personnaliser les valeurs

# ===== APPLICATION =====
NODE_ENV=development
APP_NAME=ERP TopSteel
APP_VERSION=1.0.0

# ===== PORTS =====
API_PORT=3002
WEB_PORT=3005

# ===== URLS =====
NEXT_PUBLIC_API_URL=http://127.0.0.1:3002
NEXT_PUBLIC_APP_URL=http://127.0.0.1:3005
NEXT_PUBLIC_APP_NAME=ERP TopSteel

# ===== BASE DE DONNÉES =====
DB_TYPE=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=erp_topsteel
DB_SSL=false
DB_SYNCHRONIZE=true
DB_LOGGING=false
USE_SYNC=true

# ===== JWT =====
JWT_SECRET=development-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=development-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=topsteel-erp
JWT_AUDIENCE=topsteel-users

# ===== NEXTAUTH =====
NEXTAUTH_URL=http://127.0.0.1:3000
NEXTAUTH_SECRET=development-nextauth-secret

# ===== REDIS (OPTIONNEL) =====
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== RATE LIMITING =====
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ===== FEATURES FLAGS =====
NEXT_PUBLIC_ENABLE_3D_VIEWER=true
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_ADVANCED_REPORTS=true

# ===== CONFIGURATION NEXT.JS =====
# Analyse du bundle (pnpm build:analyze)
ANALYZE=false

# Configuration Docker
DOCKER=false

# Désactiver la télémétrie Next.js
NEXT_TELEMETRY_DISABLED=1

# ===== SERVICES EXTERNES (OPTIONNELS) =====
# Monitoring et erreurs
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=topsteel
SENTRY_PROJECT=erp-web

# Upload de fichiers
UPLOADTHING_SECRET=
UPLOADTHING_APP_ID=

# Analytics
GOOGLE_ANALYTICS_ID=

# ===== EMAIL (BACKEND) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ===== UPLOAD ET STOCKAGE =====
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=uploads
UPLOAD_ALLOWED_TYPES=image/*,application/pdf

# ===== ELASTICSEARCH (OPTIONNEL) =====
# Pour la recherche avancée d'images et documents
ELASTICSEARCH_URL=http://127.0.0.1:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_NODE_ENV=development

# ===== LOGS ET DEBUG =====
LOG_LEVEL=info
LOG_FILE=false
LOG_DIR=logs
DEBUG=false

# ===== SÉCURITÉ =====
# Générer une clé de 32 caractères minimum
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS pour l'API
API_CORS_ORIGIN=http://127.0.0.1:3000

# ===== DÉVELOPPEMENT AVANCÉ =====
# Turbopack (expérimental)
TURBOPACK=false

# Base de données de test
DATABASE_URL_TEST=postgresql://test:test@127.0.0.1:5432/topsteel_test

# ===== DÉPLOIEMENT =====
# Variables automatiquement définies par les plateformes

# Vercel
# VERCEL=1
# VERCEL_URL=your-app.vercel.app

# Railway
# RAILWAY_ENVIRONMENT=production

# Docker
# DOCKER=true

# ===== VARIABLES SPÉCIFIQUES TOPSTEEL =====
# Configuration métier

# Modules activés
MODULE_PRODUCTION=true
MODULE_FACTURATION=true
MODULE_STOCKS=true
MODULE_DOCUMENTS=true

# Localisation
DEFAULT_TIMEZONE=Europe/Paris
DEFAULT_LOCALE=fr-FR
DEFAULT_CURRENCY=EUR

# Limites business
MAX_PROJECTS_PER_CLIENT=100
MAX_UPLOAD_SIZE_MB=10
SESSION_TIMEOUT_MINUTES=480

# ===== EXEMPLE DE .env.local MINIMAL =====
# Pour démarrer rapidement, créer un .env.local avec :
#
# NODE_ENV=development
# NEXT_PUBLIC_API_URL=http://localhost:3001/api
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# DB_HOST=localhost
# DB_USERNAME=postgres
# DB_PASSWORD=your_password
# DB_NAME=erp_topsteel
# JWT_SECRET=your-32-character-secret-key-here
# NEXTAUTH_SECRET=your-nextauth-secret-key-here