# ===============================================
# TopSteel ERP - Environment Variables
# ===============================================
# Copy this file to .env.local and fill in your values

# ===============================================
# Database Configuration
# ===============================================
DATABASE_URL=postgresql://username:password@localhost:5432/topsteel_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ===============================================
# Redis Configuration (Optional)
# ===============================================
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# ===============================================
# JWT & Security
# ===============================================
JWT_SECRET=your-secret-key-min-32-chars-long-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# ===============================================
# CORS Configuration
# ===============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ===============================================
# Server Configuration
# ===============================================
NODE_ENV=development
PORT=3002
API_PREFIX=/api/v1

# ===============================================
# SMS Service Configuration
# ===============================================
# Choose your SMS provider: twilio | vonage | aws
SMS_PROVIDER=twilio

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=optional_messaging_service_sid

# Vonage (Nexmo) Configuration
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_FROM_NUMBER=TopSteel
VONAGE_BRAND_NAME=TopSteel

# AWS SNS Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SNS_SENDER_ID=TopSteel
AWS_SNS_MAX_PRICE=0.50

# SMS Service General Settings
SMS_LOG_ENABLED=true
SMS_DRY_RUN=false  # Set to true to test without sending real SMS
SMS_RATE_LIMIT_PER_HOUR=100
SMS_RATE_LIMIT_PER_DAY=1000

# ===============================================
# Email Service Configuration
# ===============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=TopSteel ERP <noreply@topsteel.com>

# ===============================================
# File Upload Configuration
# ===============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===============================================
# ElasticSearch Configuration (Optional)
# ===============================================
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_PREFIX=topsteel_

# ===============================================
# Monitoring & Analytics (Optional)
# ===============================================
# Sentry Error Tracking
SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_ENABLED=false
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_DEBUG=false
SENTRY_ATTACH_STACKTRACE=true
# Frontend Sentry (Next.js)
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENABLED=false
NEXT_PUBLIC_ENV=development

# DataDog APM
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.eu
DATADOG_ENV=development
DATADOG_SERVICE=topsteel-erp

# New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_key
NEW_RELIC_APP_NAME=TopSteel ERP

# ===============================================
# External Services
# ===============================================
# Google Maps API (for geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI API (for AI features)
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4

# ===============================================
# Feature Flags
# ===============================================
FEATURE_SMS_ENABLED=true
FEATURE_EMAIL_ENABLED=true
FEATURE_ELASTICSEARCH_ENABLED=false
FEATURE_REDIS_CACHE_ENABLED=true
FEATURE_MONITORING_ENABLED=false
FEATURE_AI_ASSISTANT_ENABLED=false

# ===============================================
# Rate Limiting
# ===============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ===============================================
# Session Configuration
# ===============================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# ===============================================
# Next.js Specific (apps/web)
# ===============================================
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MARKETPLACE_URL=http://localhost:3001
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
NEXT_PUBLIC_ENABLE_PWA=false

# ===============================================
# Development Tools
# ===============================================
DEBUG=false
LOG_LEVEL=info  # error | warn | info | debug | verbose
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# ===============================================
# Backup & Maintenance
# ===============================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please try again later."