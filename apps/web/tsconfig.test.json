{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/__tests__/**/*",
    "jest.config.{js,ts,mjs,cjs}",
    "setupTests.{ts,js}"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
