{
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@erp/types/*": [
        "../../packages/types/src/*"
      ],
      "@erp/utils/*": [
        "../../packages/utils/src/*"
      ],
      "@erp/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@erp/types": [
        "../../packages/types/src"
      ],
      "@erp/utils": [
        "../../packages/utils/src"
      ],
      "@erp/ui": [
        "../../packages/ui/src"
      ]
    },
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "module": "esnext",
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ]
  },
  "extends": "../../tsconfig.json"
}
