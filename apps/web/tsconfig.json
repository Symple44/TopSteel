{
  "extends": "../../packages/config/typescript/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "ES6"
    ],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@erp/ui": [
        "../../packages/ui/src"
      ],
      "@erp/types": [
        "../../packages/types/src"
      ],
      "@erp/utils": [
        "../../packages/utils/src"
      ]
    },
    "tsBuildInfoFile": ".next/.tsbuildinfo",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./src/types/**/*",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "src/types/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "coverage"
  ]
}
