{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@erp/ui": ["../../packages/ui/src/index.ts"],
      "@erp/ui/*": ["../../packages/ui/src/*"],
      "@erp/types": ["../../packages/types/src"],
      "@erp/types/*": ["../../packages/types/src/*"],
      "@erp/utils": ["../../packages/utils/src"],
      "@erp/utils/*": ["../../packages/utils/src/*"],
      "@erp/domains": ["../../packages/domains/src"],
      "@erp/domains/*": ["../../packages/domains/src/*"],
      "@erp/api-client": ["../../packages/api-client/src"],
      "@erp/api-client/*": ["../../packages/api-client/src/*"],
      "@erp/utilities": ["../../packages/utilities/src"],
      "@erp/utilities/*": ["../../packages/utilities/src/*"],
      "@erp/shared": ["../../packages/shared/src"],
      "@erp/shared/*": ["../../packages/shared/src/*"],
      "@erp/config": ["../../packages/config/src"],
      "@erp/config/*": ["../../packages/config/src/*"]
    },
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "src/app/api/admin/permissions/route.ts",
    "src/components/lazy/lazy-imports.tsx",
    "src/stores/index.ts"
  ],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/types"
    },
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/domains"
    },
    {
      "path": "../../packages/api-client"
    }
  ]
}
