{
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@erp/domains": ["../../packages/domains/dist"],
      "@erp/domains/*": ["../../packages/domains/dist/*"],
      "@erp/types": ["../../packages/types/dist"],
      "@erp/types/*": ["../../packages/types/dist/*"],
      "@erp/ui": ["../../packages/ui/dist"],
      "@erp/ui/*": ["../../packages/ui/dist/*"],
      "@erp/utils": ["../../packages/utils/dist"],
      "@erp/utils/*": ["../../packages/utils/dist/*"],
      "@erp/api-client": ["../../packages/api-client/dist"],
      "@erp/api-client/*": ["../../packages/api-client/dist/*"],
      "@erp/config": ["../../packages/config"],
      "@erp/config/*": ["../../packages/config/*"],
      "@erp/domains/notifications": ["../../packages/domains/src/notifications"]
    },
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "module": "esnext",
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": ["dom", "dom.iterable", "es6"]
  },
  "extends": "../../tsconfig.json"
}
