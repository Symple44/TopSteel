{
  "extends": "../../tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "jsx": "preserve",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "paths": {
      "@erp/types": [
        "../../packages/types/dist"
      ],
      "@erp/ui": [
        "../../packages/ui/dist"
      ],
      "@erp/utils": [
        "../../packages/utils/dist"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
