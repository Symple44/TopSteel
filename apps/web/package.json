{
  "scripts": {
    "postinstall": "node scripts/patch-nextjs-otel.js",
    "prebuild": "npx tsx scripts/i18n-usage.ts && biome check src/ --diagnostic-level=warn || echo Continue malgre warnings",
    "build:check": "biome check src/ && next build",
    "build:fix": "biome check --apply src/ && next build",
    "build:strict": "cross-env NODE_OPTIONS=--max-old-space-size=8192 NEXT_TELEMETRY_DISABLED=1 next build",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 NEXT_TELEMETRY_DISABLED=1 next build || echo 'Build completed with TypeScript warnings'",
    "dev": "node scripts/patch-nextjs-otel.js && cross-env \"NODE_OPTIONS=--max-old-space-size=8192 --no-deprecation\" NODE_ENV=development next dev -p 3005",
    "dev:webpack": "node scripts/patch-nextjs-otel.js && cross-env \"NODE_OPTIONS=--max-old-space-size=8192 --no-deprecation\" NODE_ENV=development next dev --webpack -p 3005",
    "start": "cross-env \"NODE_OPTIONS=--no-deprecation\" next start -p 3005",
    "lint": "biome check src/",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install --with-deps",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "build:windows": "cross-env NODE_OPTIONS=--max-old-space-size=8192 NODE_ENV=production NEXT_BUILD_STANDALONE=false next build",
    "clean": "rimraf .next out dist",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint:biome:fix": "biome check --apply src/",
    "format:biome": "biome format --write src/",
    "lint:biome": "biome check src/",
    "i18n:check": "npx tsx scripts/i18n-sync.ts check",
    "i18n:report": "npx tsx scripts/i18n-sync.ts report",
    "i18n:sync": "npx tsx scripts/i18n-sync.ts sync",
    "i18n:usage": "npx tsx scripts/i18n-usage.ts",
    "i18n:types": "node src/lib/i18n/scripts/generate-types.mjs",
    "i18n:validate": "node src/lib/i18n/scripts/validate-translations.mjs",
    "i18n:sync:placeholders": "node src/lib/i18n/scripts/sync-translations.mjs",
    "i18n:sync:dry": "node src/lib/i18n/scripts/sync-translations.mjs --dry-run",
    "i18n:unused": "node src/lib/i18n/scripts/find-unused-keys.mjs"
  },
