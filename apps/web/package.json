{
  "name": "@erp/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "dev:turbo": "next dev --turbo",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "test:ui": "jest --watch --coverage --verbose",
    "test:e2e:debug": "playwright test --debug --headed",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "analyze:bundle": "ANALYZE=true next build",
    "analyze:deps": "npx depcheck",
    "check:types": "tsc --noEmit --incremental",
    "check:unused": "npx ts-prune",
    "clean:all": "rm -rf .next node_modules dist coverage .turbo",
    "reset": "pnpm clean:all && pnpm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test || echo 'Playwright not configured yet'",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testNamePattern='test|spec' --testPathIgnorePatterns=integration",
    "test:integration": "jest --testNamePattern=integration",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css,md}' || echo 'Prettier not configured'"
  },
  "dependencies": {
    "@erp/types": "workspace:*",
    "@erp/ui": "workspace:*",
    "@erp/utils": "workspace:*",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.2",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-query": "^5.81.5",
    "@tanstack/react-query-devtools": "^5.81.5",
    "axios": "^1.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-redux": "^9.2.0",
    "recharts": "^3.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "4.1.11",
    "zod": "^3.22.4",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@erp/config": "workspace:*",
    "@next/bundle-analyzer": "^15.3.4",
    "@playwright/test": "^1.40.0",
    "@storybook/nextjs": "^9.0.14",
    "@storybook/react": "^9.0.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "postcss": "^8.4.33",
    "ts-jest": "^29.1.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
