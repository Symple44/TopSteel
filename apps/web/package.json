{
  "name": "@erp/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "dev:turbo": "next dev --turbo",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "test:ui": "jest --watch --coverage --verbose",
    "test:e2e:debug": "playwright test --debug --headed",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "analyze:bundle": "ANALYZE=true next build",
    "analyze:deps": "npx depcheck",
    "check:types": "tsc --noEmit --incremental",
    "check:unused": "npx ts-prune",
    "clean:all": "rm -rf .next node_modules dist coverage .turbo",
    "reset": "pnpm clean:all && pnpm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@erp/types": "workspace:*",
    "@erp/ui": "workspace:*",
    "@erp/utils": "workspace:*",
    "@hookform/resolvers": "^3.3.4",
    "@tanstack/react-query": "^5.60.0",
    "axios": "^1.7.2",
    "next": "14.2.5",
    "next-themes": "^0.2.1",
    "react-hook-form": "^7.49.3",
    "recharts": "^2.10.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@erp/config": "workspace:*",
    "@next/bundle-analyzer": "^14.2.5",
    "@playwright/test": "^1.40.0",
    "@storybook/nextjs": "^7.6.3",
    "@storybook/react": "^9.0.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^22.0.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.6.0"
  }
}
