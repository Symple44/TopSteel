# Application
NODE_ENV=development
PORT=3006
APP_NAME=TopSteel Marketplace API

# Database - ERP (read access)
ERP_DB_HOST=localhost
ERP_DB_PORT=5432
ERP_DB_USERNAME=postgres
ERP_DB_PASSWORD=postgres
ERP_DB_AUTH=erp_topsteel_auth

# Database - Marketplace (read/write)
MARKETPLACE_DB_HOST=localhost
MARKETPLACE_DB_PORT=5432
MARKETPLACE_DB_USERNAME=postgres
MARKETPLACE_DB_PASSWORD=postgres
MARKETPLACE_DB_NAME=marketplace_topsteel

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# JWT
JWT_SECRET=your-marketplace-jwt-secret
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# CORS
CORS_ORIGINS=http://localhost:3007,http://localhost:3000

# Upload
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Marketplace Settings
DEFAULT_ITEMS_PER_PAGE=20
MAX_ITEMS_PER_PAGE=100
CACHE_TTL=300

# Payment (Future)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (Future)
SMTP_HOST=
SMTP_PORT=587