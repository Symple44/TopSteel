{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false, // À activer progressivement
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false, // TODO: À activer progressivement
    "strictPropertyInitialization": false, // Temporaire pour NestJS decorators
    "noFallthroughCasesInSwitch": true, // Activé : évite les erreurs de switch
    "strictNullChecks": false, // À activer plus tard
    "strictFunctionTypes": false, // À activer plus tard
    "strictBindCallApply": true, // Activé : meilleur typage des fonctions
    "noImplicitThis": true, // Activé : évite les erreurs de contexte
    "alwaysStrict": true, // Activé : mode strict JS
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "removeComments": false,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@erp/entities": ["../../packages/erp-entities/src"],
      "@erp/entities/*": ["../../packages/erp-entities/src/*"],
      "@erp/domains": ["../../packages/domains/src"],
      "@erp/domains/*": ["../../packages/domains/src/*"]
    },
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts", "**/*.test.ts", "src/scripts/**/*"]
}
