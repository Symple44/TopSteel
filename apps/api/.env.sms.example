# SMS Provider Configuration
# Choose one provider: twilio, vonage, aws-sns, mock

# SMS Provider Selection
SMS_PROVIDER=mock

# General SMS Settings
SMS_SENDER_ID=TopSteel
SMS_REGION=eu-west-1

# Twilio Configuration
# Get your credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+33123456789
SMS_API_KEY=${TWILIO_AUTH_TOKEN}

# Vonage (formerly Nexmo) Configuration
# Get your credentials from https://dashboard.nexmo.com
VONAGE_API_KEY=xxxxxxxx
VONAGE_API_SECRET=xxxxxxxxxxxxxxxx
# For Vonage, set these in SMS_API_KEY and SMS_API_SECRET
# SMS_API_KEY=${VONAGE_API_KEY}
# SMS_API_SECRET=${VONAGE_API_SECRET}

# AWS SNS Configuration
# Get your credentials from AWS IAM console
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=eu-west-1
# For AWS SNS, set these in SMS_API_KEY and SMS_API_SECRET
# SMS_API_KEY=${AWS_ACCESS_KEY_ID}
# SMS_API_SECRET=${AWS_SECRET_ACCESS_KEY}

# Rate Limiting (per minute)
SMS_RATE_LIMIT=60

# Cost Alerts
SMS_DAILY_COST_LIMIT=100
SMS_ALERT_EMAIL=admin@topsteel.fr

# Development/Testing
SMS_TEST_MODE=false
SMS_TEST_PHONE_NUMBER=+33612345678