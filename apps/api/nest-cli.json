{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "app/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "assets": ["**/*.proto", "**/*.graphql", "database/migrations/**/*.ts"],
    "watchAssets": true
  },
  "projects": {},
  "generateOptions": {
    "spec": false
  }
}
