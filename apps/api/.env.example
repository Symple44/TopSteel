# ===============================================
# TopSteel ERP - Configuration Example
# ===============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ===============================================
# üîí SECURITY - CRITICAL (Required in Production)
# ===============================================

# JWT Secrets (Generate with: openssl rand -base64 32)
# MUST be at least 32 characters in production!
JWT_SECRET=your-secret-key-min-32-chars-CHANGE-THIS
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-CHANGE-THIS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===============================================
# üåç ENVIRONMENT
# ===============================================

NODE_ENV=development
# NODE_ENV=production

# API Configuration
API_PORT=3002
API_PREFIX=api/v1
FRONTEND_URL=http://localhost:3000

# ===============================================
# üóÑÔ∏è DATABASE
# ===============================================

# Main Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-db-password
DB_NAME=erp_topsteel_topsteel

# Auth Database
DB_AUTH_HOST=localhost
DB_AUTH_PORT=5432
DB_AUTH_USERNAME=postgres
DB_AUTH_PASSWORD=your-db-password
DB_AUTH_NAME=erp_topsteel_auth

# ===============================================
# üîç ELASTICSEARCH (Optional)
# ===============================================

ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elastic-password

# ===============================================
# üìß EMAIL (Optional)
# ===============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@topsteel.com

# ===============================================
# üì¶ REDIS (Optional)
# ===============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===============================================
# üõ°Ô∏è RATE LIMITING
# ===============================================

THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ===============================================
# üß™ TESTING (Development Only)
# ===============================================

# Test user for development (DO NOT use in production)
# TEST_USER_EMAIL=test@example.com
# TEST_USER_ROLE=admin
# TEST_SOCIETE_ID=test-societe-id
# TEST_USER_ID=test-user-id
# TEST_AUTH_TOKEN=

# Password reset (for scripts)
# RESET_PASSWORD=

# ===============================================
# üìä MONITORING (Optional)
# ===============================================

SENTRY_DSN=
LOG_LEVEL=info
# LOG_LEVEL=debug

# ===============================================
# üîê ADDITIONAL SECURITY
# ===============================================

# Session
SESSION_SECRET=your-session-secret-CHANGE-THIS
SESSION_MAX_AGE=86400000

# CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000

# Content Security Policy
CSP_ENABLED=true

# ===============================================
# üöÄ FEATURES FLAGS (Optional)
# ===============================================

ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false
ENABLE_WEBSOCKETS=true

# ===============================================
# ‚ö†Ô∏è  IMPORTANT NOTES
# ===============================================
#
# 1. NEVER commit this file with real values
# 2. Generate strong secrets with:
#    - openssl rand -base64 32
#    - npx uuid (for IDs)
#    - https://passwordsgenerator.net/
#
# 3. In production:
#    - Use environment variables from your hosting provider
#    - Use secrets management service (AWS Secrets Manager, etc.)
#    - Enable all security features
#    - Use strong passwords (min 16 chars)
#
# 4. Add to .gitignore:
#    .env
#    .env.local
#    .env.test
#    .env.production
#    *.pem
#    *.key
#    .tmp/
#
# ===============================================