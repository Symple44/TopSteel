# Configuration API - Development
NODE_ENV=development
PORT=3002
API_HOST=localhost

# Base de données
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/erp_topsteel
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=erp_topsteel

# Configuration base de données (nouvelle architecture)
AUTO_RUN_MIGRATIONS=true
AUTO_RUN_SEEDS=true
ALLOW_PRODUCTION_MIGRATIONS=false
DB_LOGGING=true
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# JWT
JWT_SECRET=development-secret-key-min-32-chars-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=development-refresh-secret-key-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3000

# Logs
LOG_LEVEL=debug