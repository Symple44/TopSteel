# Application
APP_NAME=ERP TOPSTEEL API
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3001

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=erp_topsteel
DB_SSL=false
DB_MAX_CONNECTIONS=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
REDIS_MAX_ITEMS=1000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=erp-topsteel
JWT_AUDIENCE=erp-topsteel-users

# JWT Refresh Token
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# JWT Password Reset
JWT_PASSWORD_RESET_SECRET=your-password-reset-secret
JWT_PASSWORD_RESET_EXPIRES_IN=1h

# JWT Email Verification
JWT_EMAIL_VERIFICATION_SECRET=your-email-verification-secret
JWT_EMAIL_VERIFICATION_EXPIRES_IN=24h

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination
DEFAULT_PAGINATION_LIMIT=20
MAX_PAGINATION_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=true

# Redis Queue
REDIS_REMOVE_ON_COMPLETE=10
REDIS_REMOVE_ON_FAIL=5
REDIS_JOB_ATTEMPTS=3
REDIS_BACKOFF_DELAY=2000

# Redis Connection
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3

# Email (à configurer selon vos besoins)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@topsteel.com

# Storage (à configurer selon vos besoins)
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=

# External APIs (à configurer selon vos besoins)
EXTERNAL_API_KEY=
EXTERNAL_API_URL=