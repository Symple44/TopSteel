{
  "name": "@erp/api",
  "version": "1.0.0",
  "description": "API NestJS pour ERP TopSteel - Gestion mÃ©tallurgique industrielle",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "nest build",
    "build:tsup": "tsup",
    "dev": "nest start --watch",
    "dev:debug": "nest start --debug --watch",
    "format": "prettier --write \\\"src/**/*.ts\\\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \\\"{src,apps,libs,test}/**/*.ts\\\" --fix",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "db:check": "ts-node src/scripts/check-database.ts",
    "db:reset": "ts-node src/scripts/reset-database.ts",
    "db:reset:force": "ts-node src/scripts/reset-database.ts --force",
    "db:force-cleanup": "ts-node src/scripts/force-cleanup-index.ts"
  },
