{
  "name": "@erp/api",
  "version": "1.0.0",
  "description": "API NestJS pour ERP TopSteel - Gestion mÃ©tallurgique industrielle",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "nest build",
    "build:tsup": "tsup",
    "dev": "cross-env NODE_OPTIONS='--no-deprecation' nodemon",
    "dev:clean": "taskkill /F /IM node.exe /T 2>nul || true && nodemon",
    "dev:debug": "nest start --debug --watch",
    "format": "prettier --write \\\"src/**/*.ts\\\"",
    "start": "cross-env NODE_OPTIONS='--no-deprecation' nest start",
    "start:dev": "ts-node -r tsconfig-paths/register src/app/main.ts",
    "start:dev:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production NODE_OPTIONS='--no-deprecation' node dist/app/main",
    "lint": "eslint \\\"{src,apps,libs,test}/**/*.ts\\\" --fix",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:test": "ts-node -r tsconfig-paths/register src/scripts/test-menu-migration.ts",
    "migration:check": "ts-node -r tsconfig-paths/register src/scripts/pre-migration-check.ts",
    "migration:rollback": "ts-node -r tsconfig-paths/register src/scripts/rollback-menu-migration.ts",
    "migration:dry-run": "ts-node -r tsconfig-paths/register src/scripts/dry-run-migration.ts",
    "migration:simple-check": "ts-node -r tsconfig-paths/register src/scripts/simple-db-check.ts",
    "migration:apply": "ts-node -r tsconfig-paths/register src/scripts/apply-menu-migration.ts",
    "migration:create-test-data": "ts-node -r tsconfig-paths/register src/scripts/create-test-menu-data.ts",
    "migration:test-api": "ts-node -r tsconfig-paths/register src/scripts/test-api-endpoints.ts",
    "migration:activate-test": "ts-node -r tsconfig-paths/register src/scripts/activate-test-config.ts",
    "migration:marketplace": "ts-node -r tsconfig-paths/register src/scripts/run-marketplace-migration.ts",
    "migration:marketplace-multitenant": "ts-node -r tsconfig-paths/register src/scripts/run-marketplace-multitenant-migration.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "db:check": "ts-node src/scripts/check-database.ts",
    "db:reset": "ts-node src/scripts/reset-database.ts",
    "db:reset:force": "ts-node src/scripts/reset-database.ts --force",
    "db:force-cleanup": "ts-node src/scripts/force-cleanup-index.ts",
    "migration:auth:run": "typeorm-ts-node-commonjs migration:run -d src/core/database/data-source-auth.ts",
    "migration:shared:run": "typeorm-ts-node-commonjs migration:run -d src/core/database/data-source-shared.ts",
    "migration:tenant:run": "typeorm-ts-node-commonjs migration:run -d src/core/database/data-source-tenant.ts",
    "db:backup": "ts-node src/scripts/migration/backup-current-database.ts",
    "db:audit": "ts-node src/scripts/migration/audit-current-data.ts",
    "db:clean": "ts-node src/scripts/migration/clean-test-data.ts",
    "db:clean:execute": "ts-node src/scripts/migration/clean-test-data.ts --execute",
    "db:migrate": "ts-node src/scripts/migration/migration-service.ts",
    "db:rollback": "ts-node src/scripts/migration/rollback-migration.ts --force",
    "db:rollback:validate": "ts-node src/scripts/migration/rollback-migration.ts --validate",
    "db:migration:dry-run": "ts-node src/scripts/migration/dry-run-migration.ts",
    "db:validate:integrity": "ts-node src/scripts/migration/validate-migration-integrity.ts",
    "db:test:migration": "ts-node src/scripts/migration/test-migration-on-copy.ts",
    "db:test:migration:keep": "ts-node src/scripts/migration/test-migration-on-copy.ts --keep-test-dbs",
    "db:identify:orphans": "ts-node src/scripts/migration/identify-orphaned-data.ts",
    "db:migrate:entities": "ts-node src/scripts/migration/migrate-business-entities.ts",
    "db:migrate:entities:dry-run": "ts-node src/scripts/migration/migrate-business-entities.ts --dry-run",
    "db:migrate:entities:remove": "ts-node src/scripts/migration/migrate-business-entities.ts --remove-from-main",
    "db:test:topsteel": "ts-node src/scripts/migration/test-with-topsteel-prefix.ts",
    "db:test:topsteel:keep": "ts-node src/scripts/migration/test-with-topsteel-prefix.ts --keep-databases",
    "script:diagnose-admin": "ts-node -r tsconfig-paths/register src/scripts/diagnose-admin-user.ts",
    "script:create-admin-user": "ts-node -r tsconfig-paths/register src/scripts/create-admin-user.ts",
    "script:test-admin-login": "ts-node -r tsconfig-paths/register src/scripts/test-admin-login.ts",
    "marketplace:generate-data": "ts-node -r tsconfig-paths/register src/scripts/generate-marketplace-test-data.ts",
    "marketplace:test-modules": "ts-node -r tsconfig-paths/register src/scripts/test-marketplace-modules.ts",
    "migration:pricing:run": "ts-node -r tsconfig-paths/register src/scripts/run-sector-pricing-migration.ts",
    "init:pricing-data": "ts-node -r tsconfig-paths/register src/scripts/init-sector-pricing-data.ts",
    "inject:metallurgy-data": "ts-node -r tsconfig-paths/register src/scripts/inject-metallurgy-data.ts",
    "inject:metallurgy-clean": "ts-node -r tsconfig-paths/register src/scripts/metallurgy-injection-orchestrator.ts",
    "cleanup:produits": "ts-node -r tsconfig-paths/register src/scripts/cleanup-legacy-produits.ts",
    "cleanup:migrations": "ts-node -r tsconfig-paths/register src/scripts/cleanup-migration-history.ts",
    "migrate:settings-to-auth": "ts-node -r tsconfig-paths/register src/scripts/migrate-system-settings-to-auth.ts",
    "cleanup:system-settings": "ts-node -r tsconfig-paths/register src/scripts/cleanup-system-settings.ts"
  },
  "dependencies": {
    "@azure/identity": "^4.11.0",
