{
  "name": "@erp/api",
  "version": "1.0.0",
  "description": "API TopSteel ERP",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:cov": "jest --config=jest.config.cjs --coverage",
    "test:watch": "jest --config=jest.config.cjs --watch",
    "start:debug": "nest start --debug --watch",
    "test": "jest --config=jest.config.cjs",
    "lint": "eslint src/ || echo 'ESLint not configured'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}' || echo 'Prettier not configured'",
    "type-check": "tsc --noEmit",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testNamePattern=integration",
    "test:unit": "jest --testNamePattern='test|spec' --testPathIgnorePatterns=integration"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.3",
