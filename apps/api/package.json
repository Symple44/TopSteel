{
  "name": "@erp/api",
  "version": "1.0.0",
  "description": "API NestJS pour ERP TopSteel - Gestion métallurgique industrielle",
  "main": "dist/main.js",
  "scripts": {
    "_comment_build": "--- Scripts de build ---",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "echo 'Build API terminé avec succès'",
    "_comment_dev": "--- Scripts de développement ---",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "_comment_quality": "--- Scripts qualité de code ---",
    "lint": "eslint src/ --fix",
    "lint:check": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "_comment_test": "--- Scripts de test ---",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:unit": "jest --testPathPattern=src/.*\\.spec\\.ts$",
    "test:integration": "jest --testPathPattern=src/.*\\.integration\\.test\\.ts$",
    "_comment_db": "--- Scripts base de données ---",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/database/data-source.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d src/database/data-source.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d src/database/data-source.ts",
    "seed:run": "ts-node -r tsconfig-paths/register src/database/seeds/*.ts",
    "_comment_utils": "--- Scripts utilitaires ---",
    "clean": "rimraf dist coverage",
    "docs:generate": "npx @compodoc/compodoc -p tsconfig.json -s",
    "swagger:generate": "ts-node scripts/generate-swagger.ts"
  },
  "dependencies": {
    "_comment_nestjs": "--- NestJS Core ---",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/websockets": "^11.1.3",
    "_comment_nestjs_modules": "--- NestJS Modules ---",
    "@nestjs/config": "^4.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "_comment_database": "--- Base de données ---",
    "typeorm": "^0.3.25",
    "pg": "^8.11.3",
    "redis": "^4.7.1",
    "cache-manager": "^7.0.1",
    "cache-manager-redis-store": "^3.0.1",
    "bull": "^4.16.5",
    "_comment_auth": "--- Authentification ---",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "_comment_validation": "--- Validation et transformation ---",
    "class-validator": "^0.14.2",
    "class-transformer": "^0.5.1",
    "joi": "^17.13.3",
    "_comment_utils": "--- Utilitaires ---",
    "compression": "^1.8.0",
    "helmet": "^7.2.0",
    "multer": "^1.4.5-lts.2",
    "winston": "^3.17.0",
    "rxjs": "^7.8.2",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "_comment_nestjs_dev": "--- NestJS Dev Tools ---",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.3",
    "@nestjs/testing": "^11.1.3",
    "_comment_config": "--- Configuration ---",
    "@erp/config": "workspace:*",
    "@erp/types": "workspace:*",
    "@erp/utils": "workspace:*",
    "_comment_typescript": "--- TypeScript ---",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2",
    "ts-loader": "^9.5.2",
    "tsconfig-paths": "^4.2.0",
    "_comment_testing": "--- Testing ---",
    "jest": "^30.0.3",
    "ts-jest": "^29.4.0",
    "supertest": "^6.3.4",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^2.0.16",
    "_comment_types": "--- Types ---",
    "@types/node": "^24.0.7",
    "@types/express": "^4.17.23",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/multer": "^1.4.13",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.4",
    "_comment_linting": "--- Linting et formatting ---",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "_comment_utils_dev": "--- Utilitaires de développement ---",
    "rimraf": "^6.0.1",
    "@compodoc/compodoc": "^1.1.24"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.15.0"
  },
  "keywords": [
    "nestjs",
    "api",
    "erp",
    "metallurgy",
    "topsteel",
    "typeorm",
    "postgresql",
    "jwt",
    "swagger"
  ],
  "author": {
    "name": "TopSteel",
    "email": "dev@topsteel.fr"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
