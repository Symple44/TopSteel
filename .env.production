# Configuration Production Proxmox
# !! IMPORTANT: Modifier ces valeurs pour votre environnement !!

# ===== DOMAINE ET SSL =====
DOMAIN=topsteel.exemple.com
ACME_EMAIL=admin@exemple.com

# ===== BASE DE DONNÉES =====
DB_USERNAME=topsteel_prod
DB_PASSWORD=CHANGEZ_MOI_AVEC_UN_MOT_DE_PASSE_FORT
DB_NAME=erp_topsteel

# ===== REDIS =====
REDIS_PASSWORD=CHANGEZ_MOI_REDIS_PASSWORD

# ===== JWT SÉCURITÉ =====
JWT_SECRET=CHANGEZ_MOI_JWT_SECRET_MINIMUM_32_CARACTERES_PRODUCTION
JWT_REFRESH_SECRET=CHANGEZ_MOI_JWT_REFRESH_SECRET_32_CHARS_PROD
NEXTAUTH_SECRET=CHANGEZ_MOI_NEXTAUTH_SECRET_32_CARACTERES

# ===== VARIABLES SYSTÈME =====
NODE_ENV=production
APP_NAME=ERP TopSteel
APP_VERSION=1.0.0

# ===== SMTP EMAIL =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-app

# ===== MONITORING =====
ENABLE_MONITORING=true
LOG_LEVEL=info

# ===== LIMITES PRODUCTION =====
THROTTLE_TTL=60000
THROTTLE_LIMIT=1000
MAX_UPLOAD_SIZE_MB=50
SESSION_TIMEOUT_MINUTES=480

# ===== SÉCURITÉ =====
ENCRYPTION_KEY=CHANGEZ_MOI_ENCRYPTION_KEY_EXACTEMENT_32_CHARS
CORS_ORIGIN=https://topsteel.exemple.com

# ===== MODULES BUSINESS =====
MODULE_PRODUCTION=true
MODULE_FACTURATION=true
MODULE_STOCKS=true
MODULE_DOCUMENTS=true

# ===== BASE DE DONNÉES MULTI-TENANT =====
DB_AUTH_NAME=erp_topsteel_auth
DB_SHARED_NAME=erp_topsteel_shared
DB_TENANT_PREFIX=erp_topsteel

# ===== MARKETPLACE =====
MARKETPLACE_DB_NAME=erp_topsteel_marketplace
ERP_DB_HOST=postgres
ERP_DB_PORT=5432

# ===== PERFORMANCE =====
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30000
REDIS_DB=0

# ===== ANALYTICS (OPTIONNEL) =====
GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=topsteel
SENTRY_PROJECT=erp-production