{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start:dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "PORT", "DB_*", "REDIS_*", "JWT_*"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "DB_*",
        "REDIS_*",
        "JWT_*",
        "APP_*",
        "CORS_*"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV", "PORT"]
    },
    "start:prod": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV", "PORT", "DB_*", "REDIS_*", "JWT_*"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "test/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}"
      ]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": ["NODE_ENV", "CI"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "jest.config.{js,ts,cjs}",
        "package.json"
      ],
      "cache": false
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": ["NODE_ENV", "CI", "DB_*", "REDIS_*"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "**/*.integration.test.{ts,tsx}",
        "**/*.integration.spec.{ts,tsx}",
        "jest.config.{js,ts,cjs}",
        "package.json"
      ],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": ["NODE_ENV", "CI"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "jest.config.{js,ts,cjs}",
        "package.json"
      ],
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:cov": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": ["NODE_ENV", "DB_*", "REDIS_*"]
    },
    "migration:run": {
      "cache": false,
      "env": ["DB_*"]
    },
    "migration:generate": {
      "cache": false,
      "env": ["DB_*"]
    },
    "migration:revert": {
      "cache": false,
      "env": ["DB_*"]
    },
    "seed:run": {
      "cache": false,
      "env": ["DB_*"]
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md}",
        ".prettierrc*",
        ".prettierignore",
        "package.json"
      ],
      "outputs": [],
      "cache": false
    }
  },
  "globalEnv": [
    "TURBO_FORCE",
    "CI"
  ]
}
