{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": { "dependsOn": ["^build"], "inputs": ["src/**/*.{ts,tsx,js,jsx}"] }"] },
    "type-check": {
      "dependsOn": ["^build"],
      "cache": true
    }
  }
}
