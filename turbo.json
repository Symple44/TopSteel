{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "next.config.*",
        "tailwind.config.*",
        "tsconfig.json"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "DATABASE_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "PORT",
        "NEXT_PUBLIC_*",
        "DATABASE_URL",
        "JWT_SECRET",
        "REDIS_URL"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "start:dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "PORT",
        "DATABASE_URL",
        "JWT_SECRET",
        "REDIS_URL"
      ]
    },
    "start:prod": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "PORT",
        "DATABASE_URL",
        "JWT_SECRET",
        "REDIS_URL"
      ]
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*",
        "tsconfig.json"
      ],
      "outputs": [
        ".eslintcache"
      ]
    },
    "lint:fix": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*", 
        "eslint.config.*",
        "tsconfig.json"
      ],
      "outputs": []
    },
    "lint:fix": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*",
        "tsconfig.json"
      ],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": [
        "*.tsbuildinfo",
        ".tsbuildinfo"
      ]
    },
    "format": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*"
      ],
      "outputs": []
    },
    "format:check": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*"
      ],
      "outputs": [
        ".prettiercache"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "vitest.config.*",
        "**/*.test.*",
        "**/*.spec.*"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "**/*.test.*",
        "**/*.spec.*"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "**/*.integration.*",
        "**/*.e2e.*"
      ],
      "outputs": [
        "coverage/**",
        "test-results/**"
      ],
      "env": [
        "DATABASE_URL",
        "TEST_DATABASE_URL"
      ]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "playwright.config.*",
        "**/*.e2e.*"
      ],
      "outputs": [
        "test-results/**",
        "playwright-report/**"
      ],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "TEST_DATABASE_URL"
      ]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "**/*.test.*",
        "**/*.spec.*"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "migration:generate": {
      "cache": false,
      "inputs": [
        "src/database/**",
        "src/**/*.entity.ts"
      ],
      "env": [
        "DATABASE_URL"
      ]
    },
    "migration:run": {
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "migration:revert": {
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "seed:run": {
      "dependsOn": ["migration:run"],
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    }
  },
  "globalDependencies": [
    "package.json",
    "pnpm-lock.yaml",
    "turbo.json",
    ".env",
    ".env.local",
    ".env.development",
    ".env.production"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "NETLIFY"
  ],
  "remoteCache": {
    "enabled": true
  }
}