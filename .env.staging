# Configuration Staging/Test
# Version simplifiée pour les tests

# ===== DOMAINE ET SSL =====
DOMAIN=staging.topsteel.exemple.com
ACME_EMAIL=admin@exemple.com

# ===== BASE DE DONNÉES =====
DB_USERNAME=topsteel_staging
DB_PASSWORD=staging_password_change_me
DB_NAME=erp_topsteel_staging

# ===== REDIS =====
REDIS_PASSWORD=staging_redis_password

# ===== JWT SÉCURITÉ =====
JWT_SECRET=staging-jwt-secret-minimum-32-caracteres-pour-test
JWT_REFRESH_SECRET=staging-jwt-refresh-secret-32-chars-test
NEXTAUTH_SECRET=staging-nextauth-secret-32-caracteres

# ===== VARIABLES SYSTÈME =====
NODE_ENV=staging
APP_NAME=ERP TopSteel (Staging)
APP_VERSION=1.0.0-staging

# ===== DEBUG STAGING =====
LOG_LEVEL=debug
ENABLE_MONITORING=true

# ===== LIMITES STAGING =====
THROTTLE_TTL=30000
THROTTLE_LIMIT=500
MAX_UPLOAD_SIZE_MB=25
SESSION_TIMEOUT_MINUTES=240

# ===== MODULES BUSINESS =====
MODULE_PRODUCTION=true
MODULE_FACTURATION=true
MODULE_STOCKS=true
MODULE_DOCUMENTS=true

# ===== BASE DE DONNÉES MULTI-TENANT =====
DB_AUTH_NAME=erp_topsteel_auth_staging
DB_SHARED_NAME=erp_topsteel_shared_staging
DB_TENANT_PREFIX=erp_topsteel_staging

# ===== MARKETPLACE =====
MARKETPLACE_DB_NAME=erp_topsteel_marketplace_staging