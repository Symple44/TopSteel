# Package Manager Configuration
# This project uses pnpm exclusively

# Disable strict engine requirements for deployment compatibility
engine-strict=false

# pnpm configuration
# Note: The following pnpm-specific options are commented out to avoid npm warnings
# They are not needed as pnpm configuration is enforced via package.json engines
# auto-install-peers=true
# strict-peer-dependencies=false
# shamefully-hoist=false
# public-hoist-pattern[]=*@radix-ui/*
# public-hoist-pattern[]=*eslint*
# public-hoist-pattern[]=*prettier*

# Registry configuration
registry=https://registry.npmjs.org/

# Performance optimizations
prefer-offline=true
# network-timeout=30000

# Security and funding
fund=false
audit-level=moderate
legacy-peer-deps=false