[
  // ==================== DÉVELOPPEMENT ====================
  {
    "key": "ctrl+shift+d",
    "command": "workbench.action.tasks.runTask",
    "args": "🚀 Turbo Dev - All",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+alt+w",
    "command": "workbench.action.tasks.runTask",
    "args": "🌐 Dev - Web Only"
  },
  {
    "key": "ctrl+alt+a",
    "command": "workbench.action.tasks.runTask",
    "args": "🔧 Dev - API Only"
  },

  // ==================== BUILD ====================
  {
    "key": "ctrl+shift+b",
    "command": "workbench.action.tasks.runTask",
    "args": "🔨 Build - All"
  },
  {
    "key": "ctrl+alt+b",
    "command": "workbench.action.tasks.runTask",
    "args": "🌐 Build - Web Only"
  },
  {
    "key": "ctrl+shift+alt+b",
    "command": "workbench.action.tasks.runTask",
    "args": "📦 Build - Packages Only"
  },

  // ==================== TESTS ====================
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Test - All"
  },
  {
    "key": "ctrl+shift+w",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Test - Watch"
  },
  {
    "key": "ctrl+shift+alt+t",
    "command": "workbench.action.tasks.runTask",
    "args": "📊 Test - Coverage"
  },

  // ==================== QUALITÉ CODE ====================
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.tasks.runTask",
    "args": "🔍 Lint - All"
  },
  {
    "key": "ctrl+shift+f",
    "command": "workbench.action.tasks.runTask",
    "args": "🔧 Lint - Fix All"
  },
  {
    "key": "ctrl+alt+f",
    "command": "workbench.action.tasks.runTask",
    "args": "🎨 Format Code"
  },
  {
    "key": "ctrl+alt+t",
    "command": "workbench.action.tasks.runTask",
    "args": "🔍 Type Check"
  },

  // ==================== NETTOYAGE (RIMRAF) ====================
  {
    "key": "ctrl+shift+c",
    "command": "workbench.action.tasks.runTask",
    "args": "🧹 Clean - Standard"
  },
  {
    "key": "ctrl+alt+c",
    "command": "workbench.action.tasks.runTask",
    "args": "🗑️ Clean - Cache Only"
  },
  {
    "key": "ctrl+shift+alt+c",
    "command": "workbench.action.tasks.runTask",
    "args": "💣 Clean - Deep Clean"
  },
  {
    "key": "ctrl+shift+r",
    "command": "workbench.action.tasks.runTask",
    "args": "🔄 Reset Project"
  },

  // ==================== BASE DE DONNÉES ====================
  {
    "key": "ctrl+alt+m",
    "command": "workbench.action.tasks.runTask",
    "args": "🗄️ DB - Run Migrations"
  },
  {
    "key": "ctrl+alt+s",
    "command": "workbench.action.tasks.runTask",
    "args": "🌱 DB - Seed Data"
  },
  {
    "key": "ctrl+shift+alt+m",
    "command": "workbench.action.tasks.runTask",
    "args": "🔄 DB - Generate Migration"
  },

  // ==================== POSTGRESQL ====================
  {
    "key": "ctrl+shift+alt+d",
    "command": "workbench.action.tasks.runTask",
    "args": "🗄️ Test connexion PostgreSQL"
  },
  {
    "key": "ctrl+shift+alt+r",
    "command": "workbench.action.tasks.runTask",
    "args": "🔄 Redémarrer PostgreSQL"
  },

  // ==================== SETUP & MAINTENANCE ====================
  {
    "key": "ctrl+shift+alt+v",
    "command": "workbench.action.tasks.runTask",
    "args": "🔍 Vérification Environnement Complet"
  },
  {
    "key": "ctrl+shift+alt+s",
    "command": "workbench.action.tasks.runTask",
    "args": "🚀 Setup Complet + PostgreSQL"
  },
  {
    "key": "ctrl+shift+alt+p",
    "command": "workbench.action.tasks.runTask",
    "args": "🗄️ Configuration PostgreSQL uniquement"
  },

  // ==================== ANALYSE & RAPPORTS ====================
  {
    "key": "ctrl+alt+p",
    "command": "workbench.action.tasks.runTask",
    "args": "📊 Bundle Analyzer"
  },
  {
    "key": "ctrl+shift+alt+x",
    "command": "workbench.action.tasks.runTask",
    "args": "📋 Vérification des dépendances"
  },
  {
    "key": "ctrl+shift+alt+u",
    "command": "workbench.action.tasks.runTask",
    "args": "🔒 Security Audit"
  },

  // ==================== DEBUG ====================
  {
    "key": "f5",
    "command": "workbench.action.debug.start",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+f5",
    "command": "workbench.action.debug.run",
    "when": "!inDebugMode"
  },
  {
    "key": "shift+f5",
    "command": "workbench.action.debug.stop",
    "when": "inDebugMode"
  },
  {
    "key": "ctrl+shift+f5",
    "command": "workbench.action.debug.selectandstart",
    "when": "!inDebugMode"
  },

  // ==================== TERMINAUX SPÉCIALISÉS ====================
  {
    "key": "ctrl+shift+alt+1",
    "command": "workbench.action.terminal.new",
    "args": {
      "cwd": "${workspaceFolder}/apps/web",
      "name": "🌐 Web Terminal"
    }
  },
  {
    "key": "ctrl+shift+alt+2",
    "command": "workbench.action.terminal.new",
    "args": {
      "cwd": "${workspaceFolder}/apps/api",
      "name": "🔧 API Terminal"
    }
  },
  {
    "key": "ctrl+shift+alt+3",
    "command": "workbench.action.terminal.new",
    "args": {
      "cwd": "${workspaceFolder}",
      "name": "📦 Root Terminal"
    }
  },

  // ==================== NAVIGATION RAPIDE ====================
  {
    "key": "ctrl+1",
    "command": "workbench.action.terminal.focusAtIndex1"
  },
  {
    "key": "ctrl+2",
    "command": "workbench.action.terminal.focusAtIndex2"
  },
  {
    "key": "ctrl+3",
    "command": "workbench.action.terminal.focusAtIndex3"
  },

  // ==================== UTILITAIRES ====================
  {
    "key": "ctrl+alt+n",
    "command": "workbench.action.terminal.new",
    "args": {
      "cwd": "${workspaceFolder}"
    }
  },
  {
    "key": "ctrl+shift+alt+g",
    "command": "workbench.action.tasks.runTask",
    "args": "💾 Sauvegarde configuration"
  },
  {
    "key": "ctrl+shift+alt+i",
    "command": "workbench.action.tasks.runTask",
    "args": "📦 Install Dependencies"
  }
]
