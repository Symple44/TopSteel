[
  // Développement
  {
    "key": "ctrl+shift+d",
    "command": "workbench.action.tasks.runTask",
    "args": "🚀 Turbo Dev - All"
  },
  {
    "key": "ctrl+alt+w",
    "command": "workbench.action.tasks.runTask",
    "args": "🌐 Dev - Web Only"
  },
  {
    "key": "ctrl+alt+a",
    "command": "workbench.action.tasks.runTask",
    "args": "🔧 Dev - API Only"
  },

  // Build
  {
    "key": "ctrl+shift+b",
    "command": "workbench.action.tasks.runTask",
    "args": "🔨 Build - All"
  },

  // Tests
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Test - All"
  },
  {
    "key": "ctrl+shift+w",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Test - Watch"
  },

  // Qualité du code
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.tasks.runTask",
    "args": "🔍 Lint - All"
  },
  {
    "key": "ctrl+shift+f",
    "command": "workbench.action.tasks.runTask",
    "args": "🔧 Lint - Fix All"
  },
  {
    "key": "ctrl+alt+f",
    "command": "workbench.action.tasks.runTask",
    "args": "🎨 Format Code"
  },

  // Maintenance
  {
    "key": "ctrl+shift+c",
    "command": "workbench.action.tasks.runTask",
    "args": "🧹 Clean All"
  },
  {
    "key": "ctrl+shift+r",
    "command": "workbench.action.tasks.runTask",
    "args": "🔄 Reset Project"
  },

  // Base de données
  {
    "key": "ctrl+alt+m",
    "command": "workbench.action.tasks.runTask",
    "args": "🗄️ DB - Run Migrations"
  },
  {
    "key": "ctrl+alt+s",
    "command": "workbench.action.tasks.runTask",
    "args": "🌱 DB - Seed Data"
  },

  // Debug (vos raccourcis existants)
  {
    "key": "f5",
    "command": "workbench.action.debug.start",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+f5",
    "command": "workbench.action.debug.run",
    "when": "!inDebugMode"
  },
  {
    "key": "shift+f5",
    "command": "workbench.action.debug.stop",
    "when": "inDebugMode"
  },

  // Navigation rapide
  {
    "key": "ctrl+1",
    "command": "workbench.action.terminal.focusAtIndex1"
  },
  {
    "key": "ctrl+2",
    "command": "workbench.action.terminal.focusAtIndex2"
  },
  {
    "key": "ctrl+3",
    "command": "workbench.action.terminal.focusAtIndex3"
  },

  // Raccourcis personnalisés existants
  {
    "key": "ctrl+alt+n",
    "command": "workbench.action.terminal.new",
    "args": {
      "cwd": "${workspaceFolder}"
    }
  },
  {
    "key": "ctrl+alt+t",
    "command": "workbench.action.tasks.runTask",
    "args": "🔍 Type Check"
  },
  {
    "key": "ctrl+alt+p",
    "command": "workbench.action.tasks.runTask",
    "args": "📊 Bundle Analyzer"
  },

  // === NOUVEAUX RACCOURCIS AJOUTÉS ===

  // Vérification et Setup environnement
  {
    "key": "ctrl+shift+alt+c",
    "command": "workbench.action.tasks.runTask",
    "args": "🔍 Vérification Environnement Complet",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+shift+alt+s",
    "command": "workbench.action.tasks.runTask",
    "args": "🚀 Setup Complet + PostgreSQL",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+shift+alt+p",
    "command": "workbench.action.tasks.runTask",
    "args": "🗄️ Configuration PostgreSQL uniquement",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+shift+alt+f",
    "command": "workbench.action.tasks.runTask",
    "args": "🔧 Réparation rapide",
    "when": "!inDebugMode"
  },

  // Debug amélioré
  {
    "key": "ctrl+shift+f5",
    "command": "workbench.action.debug.selectandstart",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+alt+f5",
    "command": "workbench.action.debug.start",
    "args": "🚀 Démarrer Full Stack (avec vérification)",
    "when": "!inDebugMode"
  },

  // PostgreSQL et Base de données
  {
    "key": "ctrl+shift+alt+d",
    "command": "workbench.action.tasks.runTask",
    "args": "🗄️ Test connexion PostgreSQL"
  },
  {
    "key": "ctrl+shift+alt+r",
    "command": "workbench.action.tasks.runTask",
    "args": "🔄 Redémarrer PostgreSQL"
  },

  // Maintenance avancée
  {
    "key": "ctrl+shift+alt+x",
    "command": "workbench.action.tasks.runTask",
    "args": "🧹 Nettoyage complet (cache + node_modules)"
  },
  {
    "key": "ctrl+shift+alt+v",
    "command": "workbench.action.tasks.runTask",
    "args": "📋 Vérification des dépendances"
  },

  // Accès rapide aux outils
  {
    "key": "ctrl+shift+alt+1",
    "command": "workbench.action.terminal.new",
    "args": {
      "cwd": "${workspaceFolder}/apps/web",
      "name": "🌐 Web Terminal"
    }
  },
  {
    "key": "ctrl+shift+alt+2",
    "command": "workbench.action.terminal.new",
    "args": {
      "cwd": "${workspaceFolder}/apps/api",
      "name": "🔧 API Terminal"
    }
  },
  {
    "key": "ctrl+shift+alt+3",
    "command": "workbench.action.terminal.new",
    "args": {
      "cwd": "${workspaceFolder}",
      "name": "📦 Root Terminal"
    }
  },

  // Commandes rapides pour le développement
  {
    "key": "ctrl+shift+alt+l",
    "command": "workbench.action.tasks.runTask",
    "args": "📊 Logs en temps réel"
  },
  {
    "key": "ctrl+shift+alt+m",
    "command": "workbench.action.tasks.runTask",
    "args": "💾 Sauvegarde configuration"
  }
]
