{
  "name": "erp-topsteel",
  "version": "1.0.0",
  "description": "ERP TopSteel - Système de gestion pour métallerie industrielle",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.15.0"
  },
  "scripts": {
    "test:watch": "turbo test:watch",
    "build": "turbo build",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean:cache": "rm -rf .turbo .next",
    "start:api": "turbo start:prod --filter=@erp/api",
    "dev": "turbo dev",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "test:e2e": "turbo test:e2e",
    "dev:all": "turbo dev",
    "lint": "turbo lint",
    "start": "turbo start",
    "lint:fix": "turbo lint:fix",
    "dev:web": "turbo dev --filter=@erp/web",
    "clean:dist": "find . -name 'dist' -type d -exec rm -rf {} +",
    "start:web": "turbo start --filter=@erp/web",
    "clean:modules": "find . -name 'node_modules' -type d -exec rm -rf {} +",
    "setup": "pnpm install && pnpm build",
    "dev:api": "turbo start:dev --filter=@erp/api",
    "format": "turbo format",
    "test:cov": "turbo test:cov"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.0.4",
    "audit-ci": "^7.0.1",
    "better-npm-audit": "^3.7.3",
    "depcheck": "^1.4.7",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "keywords": [
    "erp",
    "metallurgy",
    "topsteel",
    "management",
    "production",
    "steel",
    "manufacturing",
    "postgresql",
    "nextjs",
    "nestjs",
    "typescript"
  ],
  "author": {
    "name": "TopSteel",
    "email": "dev@topsteel.fr"
  },
  "license": "GPL-3.0 license",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topsteel/erp-topsteel.git"
  },
  "bugs": {
    "url": "https://github.com/topsteel/erp-topsteel/issues"
  },
  "homepage": "https://github.com/topsteel/erp-topsteel#readme"
}
