{
  "name": "erp-topsteel",
  "version": "1.0.0",
  "description": "ERP TopSteel - Système de gestion pour métallerie industrielle",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.15.0"
  },
  "scripts": {
    "_comment_dev": "--- Scripts de développement ---",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@erp/web",
    "dev:api": "turbo start:dev --filter=@erp/api",
    "dev:all": "turbo dev",
    "_comment_build": "--- Scripts de build ---",
    "build": "turbo build",
    "start": "turbo start",
    "start:web": "turbo start --filter=@erp/web",
    "start:api": "turbo start:prod --filter=@erp/api",
    "_comment_quality": "--- Scripts qualité de code ---",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "format:fix": "turbo format --write",
    "_comment_test": "--- Scripts de test ---",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:unit": "turbo test:unit",
    "test:integration": "jest --config=jest.config.cjs",
    "test:integration:coverage": "jest --config=jest.config.cjs --coverage",
    "test:integration:watch": "jest --config=jest.config.cjs --watch",
    "test:coverage": "turbo test:coverage",
    "test:cov": "turbo test:cov",
    "test:e2e": "turbo test:e2e",
    "_comment_db": "--- Scripts base de données ---",
    "db:migrate": "turbo migration:run --filter=@erp/api",
    "db:migrate:generate": "turbo migration:generate --filter=@erp/api",
    "db:migrate:revert": "turbo migration:revert --filter=@erp/api",
    "db:seed": "turbo seed:run --filter=@erp/api",
    "_comment_tools": "--- Outils et maintenance ---",
    "audit": "audit-ci --config audit-ci.json",
    "deps:check": "pnpm audit && depcheck",
    "deps:update": "node scripts/update-deps.js",
    "deps:outdated": "pnpm outdated --recursive",
    "deps:unused": "depcheck --json | jq '.dependencies'",
    "deps:full-check": "pnpm deps:check && pnpm deps:outdated && pnpm security:audit",
    "security:audit": "better-npm-audit audit",
    "security:snyk": "snyk test --all-projects",
    "_comment_setup": "--- Installation et configuration ---",
    "setup": "pnpm install && pnpm build --filter=\"!@erp/web\" --filter=\"!@erp/api\"",
    "setup:env": "cp apps/web/.env.example apps/web/.env.local && cp apps/api/.env.example apps/api/.env.local",
    "setup:rimraf": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-rimraf.ps1",
    "_comment_clean": "--- Scripts de nettoyage avec rimraf ---",
    "clean": "rimraf --glob node_modules/.cache .turbo .next dist apps/web/.next 'packages/*/dist' && pnpm install",
    "clean:cache": "rimraf node_modules/.cache .turbo",
    "clean:build": "rimraf --glob .next dist apps/web/.next 'packages/*/dist'",
    "clean:all": "rimraf --glob node_modules/.cache .turbo .next dist apps/web/.next 'packages/*/dist' node_modules && pnpm install",
    "clean:safe": "rimraf --verbose --glob node_modules/.cache .turbo .next dist apps/web/.next 'packages/*/dist' && pnpm install",
    "clean:explicit": "rimraf node_modules/.cache && rimraf .turbo && rimraf .next && rimraf dist && rimraf apps/web/.next && rimraf packages/ui/dist && rimraf packages/types/dist && rimraf packages/utils/dist && rimraf packages/config/dist && pnpm install",
    "reset": "pnpm clean:all",
    "_comment_ci": "--- Scripts pour CI/CD ---",
    "ci:install": "pnpm install --frozen-lockfile",
    "ci:build": "pnpm run build",
    "ci:test": "pnpm run test:coverage",
    "ci:lint": "pnpm run lint && pnpm run format:check",
    "ci:type-check": "pnpm run type-check",
    "ci:security": "pnpm run security:audit",
    "ci:full": "pnpm run ci:install && pnpm run ci:lint && pnpm run ci:type-check && pnpm run ci:build && pnpm run ci:test",
    "_comment_utils": "--- Scripts utilitaires ---",
    "check:all": "pnpm run lint && pnpm run type-check && pnpm run format:check && pnpm run test",
    "pre-commit": "pnpm run lint:fix && pnpm run format:fix && pnpm run type-check",
    "postinstall": "pnpm build --filter=\"!@erp/web\" --filter=\"!@erp/api\"",
    "test:all": "turbo test",
    "test:packages:safe": "turbo test --filter='packages/*' --continue",
    "test:apps": "turbo test --filter='apps/*'",
    "test:all:safe": "turbo test --continue",
    "health:check": "curl -f http://localhost:3001/api/health && curl -f http://localhost:3000/api/health",
    "ports:check": "pwsh -Command \"Get-NetTCPConnection -LocalPort 3000,3001,5432 -ErrorAction SilentlyContinue\"",
    "fix:ports": "pwsh -File scripts/fix-ports.ps1",
    "validate:config": "node -e \"console.log('Config validation OK')\"",
    "migration:create": "turbo migration:generate --filter=@erp/api",
    "build:clean": "turbo clean && turbo build",
    "fix-all": "turbo lint:fix && turbo format",
    "validate": "node scripts/pre-build-validation.js",
    "build:safe": "pnpm validate && pnpm build",
    "build:analyze": "turbo build --filter=@erp/web -- --analyze",
    "check:health": "pnpm type-check && pnpm lint && pnpm test && pnpm audit",
    "turbo:reset": "turbo daemon stop && rmdir /s /q .turbo && turbo daemon start",
    "build:types": "tsc --build tsconfig.build.json",
    "clean:types": "tsc --build tsconfig.build.json --clean",
    "type-check:all": "turbo type-check",
    "build:incremental": "pnpm clean:types && pnpm build:types && pnpm build",
    "changeset": "changeset",
    "version": "changeset version && pnpm install",
    "release": "turbo build && changeset publish",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:format": "biome format --write .",
    "fix:imports": "biome check --write . || eslint --fix .",
    "fix:types": "turbo type-check",
    "fix:tests": "vitest --run --reporter=verbose",
    "fix:all": "pnpm fix:imports && pnpm fix:types && pnpm build"
  },
  "dependencies": {
    "dotenv": "^17.1.0",
    "next-pwa": "^5.6.0",
    "react-day-picker": "^9.8.0",
    "vite": "7.0.2",
    "vite-plugin-dts": "4.5.4",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@nestjs/cli": "^11.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "audit-ci": "^7.1.0",
    "better-npm-audit": "^3.11.0",
    "depcheck": "^1.4.7",
    "jest": "^30.0.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "tailwindcss": "^4.1.11",
      "@tailwindcss/postcss": "^4.1.11",
      "caniuse-lite": "^1.0.30001726",
      "browserslist": "^4.24.0",
      "chokidar": "^4.0.3"
    }
  },
  "keywords": [
    "erp",
    "metallurgy",
    "topsteel",
    "management",
    "production",
    "steel",
    "manufacturing",
    "postgresql",
    "nextjs",
    "nestjs",
    "typescript"
  ],
  "author": {
    "name": "TopSteel",
    "email": "dev@topsteel.fr"
  },
  "license": "GPL-3.0 license",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topsteel/erp-topsteel.git"
  },
  "bugs": {
    "url": "https://github.com/topsteel/erp-topsteel/issues"
  },
  "homepage": "https://github.com/topsteel/erp-topsteel#readme"
}
