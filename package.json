{
  "type": "module",
  "name": "erp-topsteel",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "dotenv": "^17.1.0",
    "next": "^15.2.0",
    "next-pwa": "^5.6.0",
    "react": "^19.1.0",
    "react-day-picker": "^9.8.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "turbo": "^2.5.4",
    "vite": "7.0.3",
    "vite-plugin-dts": "4.5.4",
    "zod": "^3.25.75"
  },
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/topsteel/erp-topsteel/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@nestjs/cli": "^11.0.7",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "audit-ci": "^7.1.0",
    "better-npm-audit": "^3.11.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topsteel/erp-topsteel.git"
  },
  "engines": {
    "pnpm": ">=8.0.0",
    "node": ">=20.0.0"
  },
  "volta": {
    "pnpm": "10.12.4",
    "node": "22.12.0"
  },
  "scripts": {
    "lint:biome": "biome check .",
    "lint:biome:fix": "biome check --apply .",
    "format:biome": "biome format --write .",
    "check:all": "biome check . && turbo type-check",
    "build": "turbo build",
    "build:packages": "turbo build --filter='./packages/*'",
    "build:apps": "turbo build --filter='./apps/*'",
    "build:clean": "turbo clean && pnpm build:packages && pnpm build:apps",
    "dev": "pnpm build:packages && turbo dev",
    "dev:web": "pnpm build:packages && turbo dev --filter=@erp/web",
    "dev:api": "turbo start:dev --filter=@erp/api",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "reset": "turbo clean && rimraf node_modules pnpm-lock.yaml && pnpm install",
    "setup": "pnpm install && pnpm build:packages",
    "ci:install": "pnpm install --frozen-lockfile",
    "ci:build": "pnpm build:packages && pnpm build:apps",
    "ci:test": "turbo test"
  },
  "author": {
    "name": "TopSteel",
    "email": "dev@topsteel.fr"
  },
  "keywords": [
    "erp",
    "metallurgy",
    "topsteel",
    "management",
    "production",
    "steel",
    "manufacturing",
    "postgresql",
    "nextjs",
    "nestjs",
    "typescript"
  ],
  "license": "GPL-3.0 license",
  "homepage": "https://github.com/topsteel/erp-topsteel#readme",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "tailwindcss": "^4.1.11",
      "@tailwindcss/postcss": "^4.1.11",
      "caniuse-lite": "^1.0.30001726",
      "browserslist": "^4.24.0",
      "chokidar": "^4.0.3"
    }
  },
  "description": "ERP TopSteel - Système de gestion pour métallerie industrielle"
}

