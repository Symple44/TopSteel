{
  "name": "erp-topsteel",
  "version": "1.0.0",
  "description": "ERP TOPSTEEL - Système de gestion métallurgique",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@erp/web",
    "dev:api": "turbo start:dev --filter=@erp/api",
    "dev:all": "turbo dev",
    "start": "turbo start",
    "start:web": "turbo start --filter=@erp/web",
    "start:api": "turbo start:prod --filter=@erp/api",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:cov": "turbo test:cov",
    "test:e2e": "turbo test:e2e",
    "format": "turbo format",
    "_comment_db": "--- Scripts base de données ---",
    "db:migrate": "turbo migration:run --filter=@erp/api",
    "db:migrate:generate": "turbo migration:generate --filter=@erp/api",
    "db:migrate:revert": "turbo migration:revert --filter=@erp/api",
    "db:seed": "turbo seed:run --filter=@erp/api",
    "_comment_tools": "--- Outils et maintenance ---",
    "audit": "audit-ci --config audit-ci.json",
    "deps:check": "pnpm audit && depcheck",
    "deps:update": "node scripts/update-deps.js",
    "deps:outdated": "pnpm outdated --recursive",
    "deps:unused": "depcheck --json | jq '.dependencies'",
    "security:audit": "better-npm-audit audit",
    "security:snyk": "snyk test --all-projects",
    "deps:full-check": "pnpm deps:check && pnpm deps:outdated && pnpm security:audit",
    "_comment_setup": "--- Installation et configuration ---",
    "setup:env": "cp apps/web/.env.example apps/web/.env.local && cp apps/api/.env.example apps/api/.env.local",
    "setup:rimraf": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-rimraf.ps1",
    "test:coverage": "turbo test:coverage",
    "_comment_clean": "--- Scripts de nettoyage avec rimraf ---",
    "clean": "rimraf --glob node_modules/.cache .turbo .next dist apps/web/.next 'packages/*/dist' && pnpm install",
    "clean:explicit": "rimraf node_modules/.cache && rimraf .turbo && rimraf .next && rimraf dist && rimraf apps/web/.next && rimraf packages/ui/dist && rimraf packages/types/dist && rimraf packages/utils/dist && rimraf packages/config/dist && pnpm install",
    "clean:all": "rimraf --glob node_modules/.cache .turbo .next dist apps/web/.next 'packages/*/dist' node_modules && pnpm install",
    "clean:safe": "rimraf --verbose --glob node_modules/.cache .turbo .next dist apps/web/.next 'packages/*/dist' && pnpm install",
    "reset": "pnpm clean:all",
    "build:packages": "pnpm build --filter='@erp/types' --filter='@erp/utils' --filter='@erp/config'",
    "dev:full": "pnpm build:packages && pnpm dev",
    "check:env": "node -e \"console.log('API URL:', process.env.NEXT_PUBLIC_API_URL); console.log('DB Host:', process.env.DB_HOST);\"",
    "setup": "pwsh scripts/setup-erp.ps1",
    "setup:force": "pwsh scripts/setup-erp.ps1 -Force",
    "clean:cache": "Remove-Item -Recurse -Force .turbo, node_modules/.cache -ErrorAction SilentlyContinue",
    "sql:seed": "psql -h localhost -U postgres -d erp_topsteel -f sql/seeds/01-sample-data.sql",
    "db:reset": "psql -h localhost -U postgres -c \"DROP DATABASE IF EXISTS erp_topsteel; CREATE DATABASE erp_topsteel;\" && pnpm sql:full-with-data",
    "db:create": "psql -h localhost -U postgres -c \"CREATE DATABASE IF NOT EXISTS erp_topsteel;\"",
    "env:copy": "Copy-Item .env.example .env.local",
    "sql:views": "psql -h localhost -U postgres -d erp_topsteel -f sql/views/01-business-views.sql",
    "_comment_env": "--- Environnement ---",
    "sql:triggers": "psql -h localhost -U postgres -d erp_topsteel -f sql/triggers/01-audit-triggers.sql",
    "sql:schema": "psql -h localhost -U postgres -d erp_topsteel -f sql/schemas/01-main-schema.sql",
    "db:status": "psql -h localhost -U postgres -d erp_topsteel -c \"\\\\dt\"",
    "tools:inventory": "pwsh scripts/inventory.ps1",
    "db:restore": "echo \"Usage: pnpm db:restore --file=backup.sql\"",
    "env:validate": "node scripts/validate-env.js",
    "sql:full-with-data": "pnpm sql:full-setup && pnpm sql:seed",
    "db:backup": "pg_dump -h localhost -U postgres erp_topsteel > sql/backups/backup-$(Get-Date -Format 'yyyyMMdd-HHmmss').sql",
    "_comment_db_enhanced": "--- Scripts DB améliorés ---",
    "sql:full-setup": "pnpm sql:schema && pnpm sql:indexes && pnpm sql:triggers && pnpm sql:views",
    "sql:maintenance": "psql -h localhost -U postgres -d erp_topsteel -f sql/maintenance/01-cleanup-scripts.sql",
    "env:check": "node -e \"console.log('API:', process.env.NEXT_PUBLIC_API_URL); console.log('DB:', process.env.DB_HOST);\"",
    "clean:build": "Remove-Item -Recurse -Force dist, build, .next -ErrorAction SilentlyContinue",
    "sql:indexes": "psql -h localhost -U postgres -d erp_topsteel -f sql/indexes/01-performance-indexes.sql",
    "clean:deep": "pnpm clean:cache; pnpm clean:build; Remove-Item -Recurse -Force node_modules -ErrorAction SilentlyContinue",
    "_comment_sql": "--- Scripts SQL centralisés ---",
    "_comment_tools_enhanced": "--- Outils améliorés ---",
    "tools:sql-manager": "pwsh scripts/sql-manager.ps1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.0.4",
    "audit-ci": "^7.0.1",
    "better-npm-audit": "^3.7.3",
    "depcheck": "^1.4.7",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "erp",
    "metallurgy",
    "topsteel",
    "management",
    "production"
  ],
  "author": "TOPSTEEL",
  "license": "UNLICENSED",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}
