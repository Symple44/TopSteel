# Dockerfile.web - Next.js Frontend
FROM node:22-alpine AS base

# Configuration pnpm
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable

WORKDIR /app

# Copier les fichiers de configuration
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json ./
COPY apps/web/package.json ./apps/web/
COPY packages/*/package.json ./packages/*/

# Installation des dépendances
FROM base AS deps
RUN --mount=type=cache,id=pnpm,target=/pnpm/store pnpm install --frozen-lockfile

# Construction
FROM base AS build
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Build des packages UI nécessaires
RUN pnpm --filter @erp/ui build
RUN pnpm --filter @erp/types build
RUN pnpm --filter @erp/api-client build

# Build du frontend avec optimisations
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=production
RUN pnpm --filter @erp/web build

# Production
FROM node:22-alpine AS production
WORKDIR /app

# Installer curl pour health checks
RUN apk add --no-cache curl

# Créer un utilisateur non-root
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nextjs -u 1001

# Copier les fichiers Next.js
COPY --from=build --chown=nextjs:nodejs /app/apps/web/.next/standalone ./
COPY --from=build --chown=nextjs:nodejs /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=build --chown=nextjs:nodejs /app/apps/web/public ./apps/web/public

# Variables d'environnement
ENV NODE_ENV=production
ENV PORT=3005
ENV HOSTNAME="0.0.0.0"

# Santé check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3005/api/health || exit 1

USER nextjs
EXPOSE 3005

CMD ["node", "apps/web/server.js"]