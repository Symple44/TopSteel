{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "root": "."
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 2097152
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "warn",
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "useConst": "error",
        "useImportType": "error",
        "noNegationElse": "warn",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConsole": "warn",
        "noArrayIndexKey": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "a11y": {
        "useButtonType": "warn",
        "noSvgWithoutTitle": "warn",
        "noNoninteractiveElementToInteractiveRole": "warn",
        "noStaticElementInteractions": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "globals": [
      "React",
      "JSX",
      "console",
      "window",
      "document",
      "process",
      "Buffer",
      "describe",
      "it",
      "test",
      "expect",
      "beforeEach",
      "afterEach",
      "jest"
    ]
  },
  "overrides": [
    {
      "includes": ["packages/domains/**/*.js"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnknownProperty": "off",
            "noUnknownPseudoClass": "off"
          },
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/web/src/lib/auth/rbac-hooks.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "useHookAtTopLevel": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/ui/src/components/data-display/datatable/HierarchicalDataTable.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useAriaPropsSupportedByRole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "packages/ui/src/components/data-display/datatable/DataTable.tsx",
        "apps/web/src/app/backend-error/page.tsx",
        "apps/web/src/components/error-boundary.tsx",
        "apps/web/src/components/providers/monitoring-provider.tsx"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "noNoninteractiveTabindex": "off",
            "noStaticElementInteractions": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/web/src/components/providers/notifications-provider.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "useHookAtTopLevel": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/web/src/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "error"
          }
        }
      }
    },
    {
      "includes": ["packages/*/src/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "includes": ["apps/api/src/scripts/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["**/skeleton*.{ts,tsx}", "**/loading*.{ts,tsx}", "**/stories/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/api/src/domains/auth/services/audit.service.ts",
        "packages/ui/src/types/filters.ts",
        "apps/api/src/domains/inventory/services/stock-movement.service.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/RichTextEditor.tsx",
        "**/InlineEditor.tsx",
        "**/ReorderableList.tsx",
        "**/themed-reorderable-list.tsx",
        "**/DataTable.tsx",
        "**/HierarchicalDataTable.tsx",
        "**/CuttingPlanViewer.tsx"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "useSemanticElements": "off"
          }
        }
      }
    }
  ]
}
