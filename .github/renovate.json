{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "automerge": true,
      "groupName": "TypeScript definitions"
    },
    {
      "matchPackageNames": ["typescript", "eslint", "prettier"],
      "groupName": "dev tools",
      "schedule": ["before 6am on Monday"]
    },
    {
      "matchPackagePatterns": ["^@radix-ui/"],
      "groupName": "Radix UI components"
    },
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "bump",
      "semanticCommits": "enabled"
    }
  ],
  "schedule": ["before 6am on Monday"],
  "timezone": "Europe/Paris",
  "labels": ["dependencies"],
  "assignees": ["votre-username"],
  "reviewers": ["votre-team"]
}
